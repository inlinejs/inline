{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
  },
  "paths": {
    "@inlinejs/*": ["packages/*"]
  },
  "include": ["packages/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/*",
    "**/coverage/*",
    "**/dist/**/*",
  ]
}
